      initContainers:
        - name: wait-for-postgres
          image: busybox:1.36.1-uclibc
          command: ["/bin/sh", "-c"]
          args:
            - |
              echo "Waiting for Postgres..."
              until nslookup postgres-service.n8n.svc.cluster.local && nc -z postgres-service.n8n.svc.cluster.local 5432; do
                echo "Still waiting for DB..."
                sleep 2
              done
              echo "Postgres is up!"
        - name: volume-permissions
          image: busybox:1.36
          command: ["sh", "-c", "chown 1000:1000 /data"]
          volumeMounts:
            - name: n8n-claim0
              mountPath: /data
